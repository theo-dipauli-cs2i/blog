        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">


            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% for item in Menu %}
                    {% if item.position == 'left' %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == item.route %}active{% endif %}" href="{{ path(item.route) }}">
                                {{ item.title }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>


            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% for item in Menu %}
                    {% if item.position == 'right' %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == item.route %}active{% endif %}" href="{{ path(item.route) }}">
                                {{ item.title }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

        </div>
    </div>
